<UserControl x:Class="RevitAddin.HomeworkUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitAddin"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="350" />
            <!-- Request payload -->
            <RowDefinition Height="Auto" />
            <!-- Send button -->
            <RowDefinition Height="150" />

            <!-- Response area -->
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Request:" FontWeight="Bold" Margin="50,24,0,310"/>
        <!-- Multiline request TextBox -->
        <TextBox Name="RequestTextBox" 
                 Grid.Row="0"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Text="{Binding RequestSampleText}" Background="#FFC8C8C8"  BorderBrush="Black"
                 Margin="50">
        </TextBox>

        <!-- Send button -->
        <Button Name ="SendBtn"
                Content="Send"
                Grid.Row="1"
                Width="80"
                Height="25"
                Margin="30"
                HorizontalAlignment="Center"
                Click="Button_Click"/>

        <!-- Read-only response area -->
        <TextBlock Grid.Row="2" Text="Response:" FontWeight="Bold" Height="18" VerticalAlignment="Top" Margin="50,28,-50,0" />
        <TextBox Name="ResponseTextBox"
                 
                 Grid.Row="3"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Background="#FFC8C8C8"
                 Foreground="Black" Margin="50,51,50,-79" BorderBrush="Black"/>
    </Grid>
</UserControl>
